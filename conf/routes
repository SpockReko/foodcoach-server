# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/name/:name                    controllers.FoodController.getByName(name: String)
GET     /food/group/:code                   controllers.FoodController.getByGroup(code: String)

# Recipe items
GET     /recipes                            controllers.RecipeController.getAll

# User info
GET     /user/:alder                        controllers.UserController.getRDI(alder: Int)

# Week menu options from client
POST    /weekmenu                           controllers.WeekMenuController.weekMenu
GET     /weekmenu                           controllers.WeekMenuController.weekMenu()

# Parse ingredient string to food item
GET     /parse/:ingredient                  controllers.ParseController.parseIngredient(ingredient: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
