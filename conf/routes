# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/:attribute/:value             controllers.FoodController.search(attribute: String, value: String)

# Parse data
GET     /parse                              controllers.ApplicationController.parseBasicFood
GET     /parseMeta                          controllers.ApplicationController.parseMetaFood

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
