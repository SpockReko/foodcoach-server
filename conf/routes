# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/name/:name                    controllers.FoodController.getByName(name: String)
GET     /food/sort/:id                      controllers.FoodController.sortById(id: Int)

# Recipe items
GET     /recipes                            controllers.RecipeController.getAll
GET     /notlinked_recipes                  controllers.RecipeController.getAllNotLinked

# User info
GET     /user/:alder                        controllers.UserController.getRDI(alder: Int)

# Menu options from client
POST    /menu/nutrient                      controllers.MenuAlgorithmsController.menu
GET     /menu/nutrient                      controllers.MenuAlgorithmsController.menu()
GET     /menu/economi                       controllers.MenuAlgorithmsController.menu2()

GET     /bengt/menu/nutrient                 controllers.MenuAlgorithmsController.menuBengt()
GET     /anna/menu/nutrient                  controllers.MenuAlgorithmsController.menuAnna()


# Optimize recipe
GET     /recipe/optimize/:number            controllers.RecipeOptimizationController.optimizeByNumber(number: Long)
GET     /recipe/optimize/header/:header       controllers.RecipeOptimizationController.optimizeByTitle(header: String)

GET     /bengt/recipe/optimize/:number       controllers.RecipeOptimizationController.optimizeByNumberBengt(number: Long)
GET     /anna/recipe/optimize/:number        controllers.RecipeOptimizationController.optimizeByNumberAnna(number: Long)


# Parse ingredient string to food item
GET     /parse/:input                       controllers.ParseController.parse(input: String)
GET     /parseFull/:input                   controllers.ParseController.parseFull(input: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
