# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/name/:name                    controllers.FoodController.getByName(name: String)
GET     /food/sort/:id                      controllers.FoodController.sortById(id: Int)

# Recipe items
GET     /recipes                            controllers.RecipeController.getAll
GET     /notlinked_recipes                  controllers.RecipeController.getAllNotLinked

# User info
GET     /user/:alder                        controllers.UserController.getRDI(alder: Int)

# Menu options from client
POST    /menu                               controllers.MenuAlgorithmsController.menu
GET     /menu                               controllers.MenuAlgorithmsController.menu()
GET     /menu2                              controllers.MenuAlgorithmsController.menu2()

# Optimize recipe
GET     /recipe/:number                     controllers.RecipeOptimizationController.optimizeByNumber(number: Long)
GET     /recipe/title/:title                controllers.RecipeOptimizationController.optimizeByTitle(title: String)

# Parse ingredient string to food item
GET     /parse/:input                       controllers.ParseController.parse(input: String)
GET     /parseFull/:input                   controllers.ParseController.parseFull(input: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
