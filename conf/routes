# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/name/:name                    controllers.FoodController.getByName(name: String)
GET     /food/group/:code                   controllers.FoodController.getByGroup(code: String)

# Recipe items
GET     /recipes                            controllers.RecipeController.getAll
GET     /notlinked_recipes                  controllers.RecipeController.getAllNotLinked

# User info
GET     /user/:alder                        controllers.UserController.getRDI(alder: Int)

# Week menu options from client
POST    /weekmenu                           controllers.MenuAlgorithmsController.weekmenu
GET     /weekmenu                           controllers.MenuAlgorithmsController.weekmenu()

# Optimized recipe
GET     /recipe                             controllers.RecipeOptimizationController.recipeOptimization()

# Parse ingredient string to food item
GET     /parseIng/:ingredient               controllers.ParseController.parseIngredient(ingredient: String)
GET     /parseFull/:input                   controllers.ParseController.parseFull(input: String)
GET     /runParse                           controllers.ParseController.runParse

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

GET     /parseRec/:taggedRecipe             controllers.ParseController.recipeInfo(taggedRecipe: String)
