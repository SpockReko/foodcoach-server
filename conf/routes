# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.ApplicationController.index

# Food items
GET     /food/:id                           controllers.FoodController.get(id: Int)
GET     /food/name/:name                    controllers.FoodController.getByName(name: String)
GET     /food/group/:code                   controllers.FoodController.getByGroup(code: String)


# Recipe items
GET     /recipe/:id                         controllers.RecipeController.get(id: Long)

# Week menu options from client
POST    /weekmenu                           controllers.WeekMenuController.weekMenu


# Test Emma
GET     /emmatest/:str                      controllers.ApplicationController.ingToFood(str: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
